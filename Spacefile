micros:
  - name: website
    src: ./website
    engine: python3.9
    primary: true
    public_routes:
      - "/*"
    run: gunicorn app:app
    dev: flask run -p $PORT

  - name: stats
    src: ./stats
    engine: python3.9
    run: uvicorn app:app
    dev: uvicorn app:app --reload
